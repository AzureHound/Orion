# reload config
keybind = ctrl+shift+r=reload_config

# Splits
keybind = ctrl+shift+\=new_split:right
keybind = ctrl+shift+-=new_split:down
keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+equal=equalize_splits

# Resize splits
keybind = ctrl+left=resize_split:left,20
keybind = ctrl+right=resize_split:right,20
keybind = ctrl+up=resize_split:up,20
keybind = ctrl+down=resize_split:down,20

keybind = ctrl+h=resize_split:left,20
keybind = ctrl+j=resize_split:down,20
keybind = ctrl+k=resize_split:up,20
keybind = ctrl+l=resize_split:right,20

# Navigate splits
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top
keybind = cmd+l=goto_split:right
