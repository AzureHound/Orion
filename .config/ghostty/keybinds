# Splits
keybind = ctrl+shift+\=new_split:right
keybind = ctrl+shift+-=new_split:down
keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+equal=equalize_splits
keybind = ctrl+alt+shift+cmd=toggle_split_zoom

# Resize splits
keybind = ctrl+shift+left=resize_split:left,20
keybind = ctrl+shift+down=resize_split:down,20
keybind = ctrl+shift+up=resize_split:up,20
keybind = ctrl+shift+right=resize_split:right,20

keybind = ctrl+shift+h=resize_split:left,20
keybind = ctrl+shift+j=resize_split:down,20
keybind = ctrl+shift+k=resize_split:up,20
keybind = ctrl+shift+l=resize_split:right,20

# Navigate splits
keybind = cmd+shift+left=goto_split:left
keybind = cmd+shift+down=goto_split:down
keybind = cmd+shift+up=goto_split:up
keybind = cmd+shift+right=goto_split:right

keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+j=goto_split:down
keybind = cmd+shift+k=goto_split:up
keybind = cmd+shift+l=goto_split:right
