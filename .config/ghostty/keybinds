# reload configuration
keybind = cmd+shift+r=reload_config

# Splits
keybind = cmd+shift+|=new_split:right
keybind = cmd+shift+_=new_split:down
keybind = cmd+z=toggle_split_zoom
keybind = cmd+shift+e=equalize_splits

# Vim-keybindings
keybind = cmd+k=goto_split:top
keybind = cmd+j=goto_split:bottom
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right

keybind = cmd+right_bracket=next_tab
keybind = cmd+left_bracket=previous_tab

keybind = cmd+shift+1=goto_tab:1
keybind = cmd+shift+2=goto_tab:2
keybind = cmd+shift+3=goto_tab:3
keybind = cmd+shift+4=goto_tab:4
keybind = cmd+shift+5=goto_tab:5
keybind = cmd+shift+6=goto_tab:6
keybind = cmd+shift+7=goto_tab:7
keybind = cmd+shift+8=goto_tab:8
keybind = cmd+shift+9=goto_tab:9
