// Zed settings
{
  // User Interface
  "icon_theme": "Catppuccin Macchiato",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 20,
  "cursor_blink": true,
  "hide_mouse": "on_typing_and_movement",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16.0,
  "show_user_picture": false,
  "relative_line_numbers": false,
  "current_line_highlight": "none",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "scrollbar": {
    "show": "auto"
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha (Blue Blur+)",
    "dark": "Catppuccin Macchiato (Blue Blur+)"
  },

  // Panels
  "project_panel": {
    "default_width": 300,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "notification_panel": {
    "button": false,
    "default_width": 300,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "dock": "left",
    "copy_on_select": true,
    "shell": {
      "with_arguments": {
        "program": "/bin/zsh",
        "args": ["--login"]
      }
    }
  },

  // Features
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "left"
    }
  },

  //Vim
  "vim_mode": true,

  // Tweaks
  "format_on_save": "on",
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "tabs": {
    "show_icons": true,
    "git_status": true,
    "close_position": "right"
  },

  // Assistant
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-r1:8b"
    },
    "version": "2"
  },

  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
