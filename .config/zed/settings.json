// Zed settings
{
  // User Interface
  "show_user_picture": false,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  "icon_theme": "Catppuccin Macchiato",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 15,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "scrollbar": {
    "show": "auto"
  },
  "current_line_highlight": "none",
  "relative_line_numbers": false,
  "hide_mouse": "on_typing_and_movement",
  "cursor_shape": "bar",
  // Panels
  "project_panel": {
    "default_width": 300,
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "notification_panel": {
    "button": false,
    "default_width": 300,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  // Terminal
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "dock": "bottom",
    "copy_on_select": true,
    "shell": {
      "with_arguments": {
        "program": "/sbin/zsh",
        "args": ["--login"]
      }
    }
  },
  //Vim
  "vim_mode": true,
  "vim": {
    "cursor_shape": {
      "normal": "block",
      "visual": "block",
      "replace": "underline",
      "insert": "bar"
    }
  },
  // Assistant
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  // Features
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "position": "left"
    }
  },
  // Tweaks
  "format_on_save": "on",
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": true,
  "tabs": {
    "show_icons": true,
    "git_status": true,
    "close_position": "right"
  },
  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
